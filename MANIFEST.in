# Include all necessary documentation files
include README.md
include CONTRIBUTING.md
include CODE_OF_CONDUCT.md
include LICENSE

# Include documentation directory
recursive-include docs *.md *.rst *.txt *.png *.jpg *.svg *.mermaid

# Include configuration files
recursive-include config *.yaml *.yml *.json

# Include model configuration files
recursive-include models/config *.yaml *.yml *.json

# Include reference data
recursive-include phytovenomics/data/reference *.csv *.tsv *.json

# Include schema files
recursive-include phytovenomics/data/schemas *.json *.yaml

# Include tests
recursive-include tests *.py

# Exclude unnecessary files
global-exclude *.py[cod] *.so *.dylib *~ *.bak *.swp *.egg *.egg-info

# Exclude development files and directories
exclude .gitignore
exclude .pre-commit-config.yaml
recursive-exclude .git *
recursive-exclude .github *
recursive-exclude __pycache__ *
recursive-exclude *.egg-info *
recursive-exclude tests/temp *
recursive-exclude logs *
recursive-exclude notebooks/.ipynb_checkpoints *